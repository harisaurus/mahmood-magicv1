/*!!!
section: Combos
title: Combo (default)
jade: |
  .combo
    .combo-first 
      .guidedog Combo First
    .combo-last
      .guidedog Combo Last
*/
.combo
  display table
  width 100%
  > .combo-first
    width 0
    white-space nowrap
    img
      max-width none
  > .combo-last
    width 100%

.combo-first
  display table-cell
  padding-right (gutter/2)
  vertical-align top
  @media larger-than-desktop
    padding-right (gutter-large/2)

.combo-last
  display table-cell
  padding-left (gutter/2)
  vertical-align top
  @media larger-than-desktop
    padding-left (gutter-large/2)

/*!!!
section: Combos
title: Combo Reversed
jade: |
  .combo.combo--reversed
    .combo-first 
      .guidedog Combo First
    .combo-last
      .guidedog Combo Last
*/
.combo--reversed
  > .combo-first
    width 100%
    white-space normal
  > .combo-last
    width 0
    white-space nowrap
    img
      max-width none

.combo--middle
  > *
    vertical-align middle

.combo--bottom
  > *
    vertical-align bottom

.combo--auto
  width auto
  > .combo-first
    width 0
  > .combo-last
    width auto
  &.combo--reversed
    > .combo-first
      width auto
    > .combo-last
      width 0

/*!!!
section: Combos
title: Combo Narrow
jade: |
  .combo.combo--narrow
    .combo-first 
      .guidedog Combo First
    .combo-last
      .guidedog Combo Last
*/
.combo--narrow
  > .combo-first
    padding-right (gutter/4)
  > .combo-last
    padding-left (gutter/4)
  @media larger-than-desktop
    > .combo-first
      padding-right (gutter-large/4)
    > .combo-last
      padding-left (gutter-large/4)

/*!!!
section: Combos
title: Combo Wide
jade: |
  .combo.combo--wide
    .combo-first 
      .guidedog Combo First
    .combo-last
      .guidedog Combo Last
*/
.combo--wide
  > .combo-first
    padding-right gutter 
  > .combo-last
    padding-left gutter 
  @media larger-than-desktop
    > .combo-first
      padding-right gutter-large
    > .combo-last
      padding-left gutter-large

/*!!!
section: Combos
title: Combo Full
jade: |
  .combo.combo--full
    .combo-first 
      .guidedog Combo First
    .combo-last
      .guidedog Combo Last
*/
.combo--full
  > .combo-first
    padding-right 0
  > .combo-last
    padding-left 0
