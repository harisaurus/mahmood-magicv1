html, body
  margin: 0
  padding: 0
  width: 100%
  min-height: 100%

// apply border-box to all the things
*, *:before, *:after
  box-sizing: border-box

// ensure all html5 elements are set to block (for IE)
article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section 
  display: block

/*!!!
